<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>likepostservlet</servlet-name>
        <servlet-class>com.bsu.exadel.servlets.LikePostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>firstjavaservlets</servlet-name>
        <servlet-class>com.bsu.exadel.old.JavaServlets</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletgetname</servlet-name>
        <servlet-class>com.bsu.exadel.old.JavaServletGetName</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletcheck</servlet-name>
        <servlet-class>com.bsu.exadel.old.JavaServletCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletpage</servlet-name>
        <servlet-class>com.bsu.exadel.old.JavaServletPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlettestforward</servlet-name>
        <servlet-class>com.bsu.exadel.old.JavaServletTestForward</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlettestredirect</servlet-name>
        <servlet-class>com.bsu.exadel.old.JavaServletTestRedirect</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>postphotoservlet</servlet-name>
        <servlet-class>com.bsu.exadel.servlets.PostPhotoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>photopostsservlet</servlet-name>
        <servlet-class>com.bsu.exadel.servlets.PhotopostsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginservlet</servlet-name>
        <servlet-class>com.bsu.exadel.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>uploadservlet</servlet-name>
        <servlet-class>com.bsu.exadel.servlets.UploadImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>testDB</servlet-name>
        <servlet-class>com.bsu.exadel.servlets.DBTestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.bsu.exadel.servlets.LogoutServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>testDB</servlet-name>
        <url-pattern>/getTest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>likepostservlet</servlet-name>
        <url-pattern>/photo-post/like</url-pattern>
    </servlet-mapping>
<servlet-mapping>
    <servlet-name>uploadservlet</servlet-name>
    <url-pattern>/photo</url-pattern>
</servlet-mapping>
    <servlet-mapping>
        <servlet-name>firstjavaservlets</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletgetname</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletcheck</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletpage</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlettestforward</servlet-name>
        <url-pattern>/test1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlettestredirect</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>
<servlet-mapping>
    <servlet-name>postphotoservlet</servlet-name>
    <url-pattern>/photo-post/*</url-pattern>
</servlet-mapping>
    <servlet-mapping>
        <servlet-name>photopostsservlet</servlet-name>
        <url-pattern>/photoposts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginservlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>timemeasure</filter-name>
        <filter-class>com.bsu.exadel.filters.TimeMeasureFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>timemeasure</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>securityfilter</filter-name>
        <filter-class>com.bsu.exadel.filters.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>securityfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
